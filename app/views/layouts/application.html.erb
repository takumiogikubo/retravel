<!DOCTYPE html>
<html>
  <head>
    <title>Retravel</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm border-bottom sticky-top bg-warning">
    <% if customer_signed_in? %>
      <%= link_to edit_customer_registration_path do%>
        <%= image_tag current_customer.get_profile_image(50,50),class:"rounded-circle" %>
      <%end%>
      <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
      <%= link_to "退会する", unsubscrib_customer_path(current_customer.id)%>
      <%= link_to "わたし", customers_my_page_path %>

    <% else %>
      <%= image_tag 'no_image', size: "50x50" %>
      <%= link_to "ログイン",new_customer_session_path%>
      <%= link_to "サインイン",new_customer_registration_path%>
    <% end %>
      <%= link_to "みんな", root_path%>
      <%=link_to search_customers_path do%>
        <i class="fas fa-search"></i>ユーザー検索
      <%end%>

    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-dark text-white pt-5">

    </footer>
  </body>
</html>
