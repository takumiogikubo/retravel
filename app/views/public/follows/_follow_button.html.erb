<% unless current_customer == customer %>
  <% if current_customer.following?(customer) %>
    <%= form_for(current_customer.follows.find_by(relationship_id: customer.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :relationship_id, customer.id %>
      <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_customer.follows.build) do |f| %>
      <%= hidden_field_tag :relationship_id, customer.id %>
      <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>