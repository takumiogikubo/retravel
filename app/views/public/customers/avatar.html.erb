
<div class="container mt-3">
  <div class="d-flex justify-content-center">
    <div class="mx-auto">
      <%= image_tag @customer.get_profile_image(400,400),class:"rounded-circle border"%>
      <%= form_with model: @customer do |f|%>
        <div class="d-flex justify-content-center mt-2"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*"%></div>
        <div class="d-flex justify-content-center mt-2"><%= f.submit "画像保存",class:"avatar-submit" %></div>
      <%end%>
      <div class="d-flex justify-content-center mt-2"><%= link_to "確認完了" ,customers_my_page_path,class:"btn btn-info btn-sm avatar-submit"%></div>
    </div>
  </div>
</div>